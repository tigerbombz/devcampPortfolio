<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css?family=Lato|Roboto+Slab" rel="stylesheet">

    <meta name="keywords" content="<%= @seo_keywords %>">

    <%= favicon_link_tag 'favicons/favicon.ico' %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="cover-container d-flex h-100 p-3 mx-auto flex-column">

      <div id="background"> <!-- Use background image instead of video! -->
        <% if false %>
          <%= video_tag(
            'data.webm',
            id: "background",
            autoplay: true,
            loop: true,
            muted: true,
            poster: 'crypto2.png'
          )
          %>
        <% end %>
      </div>

      <%= render "shared/application_nav"%>

      <%= yield %>

      <%= render 'shared/application_footer' %>

      <%= alerts %>

    </div>
  </body>
</html>
